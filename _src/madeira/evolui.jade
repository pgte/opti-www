    display: none;
  }
  #campanha-evolui .modal-body img.small {
    display: block;
    max-width: 200px;
    float: left
  }
  @media (min-width: 992px) {
    #campanha-evolui .modal-body img.full {
      display: block;
    }
    #campanha-evolui .modal-body img.small {
      display: none;
    }
  }
